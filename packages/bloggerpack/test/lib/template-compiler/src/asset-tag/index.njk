<template test='template'>
  {# Auto style tag #}
  {% asset type="style", "./style.css" %}

  <div>
    <div>
      {% asset type="style", "./style.css" %}
    </div>
  </div>

  {# Auto skin tag #}
  {% asset type="skin", "./skin.css" %}

  <div>
    <div>
      {% asset type="skin", "./skin.css" %}
    </div>
  </div>

  {# Block tag (CSS) #}
  {% asset %}
    <b:if cond='!data:view.isLayoutMode'>
    <style>
    .element {
      display: block;
    }
    </style>
    </b:if>
  {% endasset %}

  <div>
    <div>
      {% asset %}
        <b:if cond='!data:view.isLayoutMode'>
        <style>
        .element {
          display: block;
        }
        </style>
        </b:if>
      {% endasset %}
    </div>
  </div>

  {# Block tag with files (CSS) #}
  {% asset %}
    <b:if cond='!data:view.isLayoutMode'>
    <style>
    <% asset "./style.css" %>
    <% asset "./style.css" %>
    </style>
    </b:if>
  {% endasset %}

  <div>
    <div>
      {% asset %}
        <b:if cond='!data:view.isLayoutMode'>
        <style>
        <% asset "./style.css" %>
        <% asset "./style.css" %>
        </style>
        </b:if>
      {% endasset %}
    </div>
  </div>

  {# Auto script tag #}
  {% asset type="script", "./script.js" %}

  <div>
    <div>
      {% asset type="script", "./script.js" %}
    </div>
  </div>

  {# Block tag (JS) #}
  {% asset %}
    <script>
    //<![CDATA[
    console.log('Hello, world!');
    //]]>
    </script>
  {% endasset %}

  <div>
    <div>
      {% asset %}
        <script>
        //<![CDATA[
        console.log('Hello, world!');
        //]]>
        </script>
      {% endasset %}
    </div>
  </div>

  {# Block tag with files (JS) #}
  {% asset %}
    <script>
    //<![CDATA[
    <% asset "./script.js" %>
    <% asset "./script.js" %>
    //]]>
    </script>
  {% endasset %}

  <div>
    <div>
      {% asset %}
        <script>
        //<![CDATA[
        <% asset "./script.js" %>
        <% asset "./script.js" %>
        //]]>
        </script>
      {% endasset %}
    </div>
  </div>

  {# Newline #}
  {% asset type="style", "./newline.css" %}

  {% asset %}


    <b:if cond='!data:view.isLayoutMode'>
    <style>
    .newline2 {
      display: block;
    }
    </style>
    </b:if>


  {% endasset %}
</template>
