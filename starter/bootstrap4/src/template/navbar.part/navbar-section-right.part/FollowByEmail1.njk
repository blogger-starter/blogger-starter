<template to='bp-template'>
  {# Navbar dropdown follow by email (using `FollowByEmail` widget) #}
  <b:widget id='FollowByEmail1' locked='false' title='Subscribe' type='FollowByEmail' visible='true'>
    <b:includable id='main'>
      <b:include name='content'/>
    </b:includable>
    <b:includable id='content'>
      <ul class='navbar-nav'>
        <li class='nav-item dropdown'>
          <a aria-expanded='false' aria-haspopup='true' class='nav-link dropdown-toggle' data-toggle='dropdown' expr:id='"DropdownMenu" + data:widget.instanceId' href='#'>
            <b:eval expr='data:title ? data:title : "Subscribe"'/>
          </a>
          <div class='dropdown-menu p-3' expr:aria-labelledby='"DropdownMenu" + data:widget.instanceId' style='min-width: 300px;'>
            <b:class cond='data:widget.sectionId == "b-section-navbar-right"' name='dropdown-menu-right'/>
            <form action='https://feedburner.google.com/fb/a/mailverify' class='follow-by-email-form' expr:onsubmit='"window.open(\"https://feedburner.google.com/fb/a/mailverify?uri=" + data:feedPath + "\", \"popupwindow\", \"scrollbars=yes,width=550,height=520\"); return true"' method='post' target='popupwindow'>
              <input autocomplete='off' class='follow-by-email-form-input form-control' expr:aria-label='data:messages.emailAddress' expr:placeholder='data:messages.emailAddress' name='email' type='email'/>
              <button class='follow-by-email-form-submit btn btn-block btn-info text-truncate mt-2' expr:title='data:messages.getEmailNotifications' type='submit'><data:messages.getEmailNotifications/></button>
              <input expr:value='data:feedPath' name='uri' type='hidden'/>
              <input name='loc' type='hidden' value='en_US'/>
            </form>
          </div>
        </li>
      </ul>
    </b:includable>
  </b:widget>
</template>
