<b:loop values='data:posts' var='post'>
  <article class='post post-archive' expr:id='"post-" + data:post.id'>
    <b:comment>=== Title ===</b:comment>
    <h2 class='post-archive-title'>
      <b:if cond='data:post.title'>
        <a class='post-archive-title-link' expr:href='data:post.link ?: data:post.url'>
          <b:attr name='b:whitespace' value='remove'/>
          <data:post.title/>
        </a>
      <b:else/><!-- fallback -->
        <a class='post-archive-title-link' expr:href='data:post.link ?: data:post.url'>
          <b:attr name='b:whitespace' value='remove'/>
          <data:messages.noTitle/>
        </a>
      </b:if>
    </h2>
    <b:comment>=== Meta ===</b:comment>
    <!--(bake _post-meta.xml)-->
    <b:comment>=== Snippet ===</b:comment>
    <div class='post-archive-snippet'>
      <data:post.snippets.short/>
    </div>
    <b:comment>=== Sharing and labels ===</b:comment>
    <!--(bake _sharing-and-labels.xml)-->
  </article>
</b:loop>